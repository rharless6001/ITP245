
@{
    ViewBag.Title = "Inventory Home Page";
    Layout = "~/Areas/Inventory/Views/Shared/_Inventory.cshtml";
}

<h2>@ViewBag.Title</h2>


<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h3 class="text text-info">Items</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4">
            @Html.ActionLink(HttpUtility.HtmlDecode("&laquo; Items &raquo;"), "Index", "Items", null, new { @class = "btn btn-info" })
            @Html.ActionLink(HttpUtility.HtmlDecode("&laquo; Categories &raquo;"), "Index", "Categories", null, new { @class = "btn btn-info" })
            @Html.ActionLink(HttpUtility.HtmlDecode("&laquo; Spoilage &raquo;"), "Index", "Spoilage", null, new { @class = "btn btn-info" })

        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <h3 class="text text-primary">PurchaseOrders</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            @Html.ActionLink(HttpUtility.HtmlDecode("&laquo; Purchase Orders &raquo;"), "Index", "Purchase Orders", null, new { @class = "btn btn-primary" })


        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <h3 class="text text-danger">Vendors</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            @Html.ActionLink(HttpUtility.HtmlDecode("&laquo; Vendors &raquo;"), "Index", "Vendors", null, new { @class = "btn btn-danger" })


        </div>
    </div>
</div>